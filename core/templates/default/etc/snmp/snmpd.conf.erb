# Autogenerated by Chef for <%= @node[:hostname] %>

# First, map community names into a "security name"
#        sec.name  																	source            community
com2sec  <%= @node['core']['hosts']['sec_name'] %>  127.0.0.1         public
com2sec  <%= @node['core']['hosts']['sec_name'] %>  50.0.0.0/8        public # Rackspace

# Second, map the security name into a group name:
#              																	sec.model  sec.name
group <%= @node['core']['hosts']['sec_name'] %> v1         <%= @node['core']['hosts']['sec_name'] %>
group <%= @node['core']['hosts']['sec_name'] %> v2c        <%= @node['core']['hosts']['sec_name'] %>

# Third, create a view for us to let the group have rights to:
#    name       incl/excl    subtree    mask
view allview    included     .1         80

# Finally, grant the group read-only access to the view.
#      group     																					context sec.model sec.level prefix read     write notify
access <%= @node['core']['hosts']['sec_name'] %>  ""      any       noauth    exact  allview  none   none

syscontact  "<%= @node['core']['hosts']['syscontact'] %>"
syslocation "Rackspace ORD1"

# Return variables for disk partitions
disk /
